<div class="container"><h1>Restaurants</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>phone number</th>
      <th>category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.address %></td>
      <td><%= restaurant.phone_number %></td>
      <td><%= restaurant.category %></td>
      <td><%= link_to 'Show', restaurant %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Add a new Restaurant', new_restaurant_path, class: "btn btn-primary" %></div>
